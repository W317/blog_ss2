<div class="content">
    <h1 id="createProduct">Edit {{product.title}}</h1>
    <form method="post" action="/admin/product-admin/update/{{product._id}}?_method=PUT" enctype="multipart/form-data"
        id="edit-product">
        <label for="title">
            <h3>Title</h3>
        </label>
        <input type="text" id="title" name="title" value="{{product.title}}">
        <label for="category">
            <h3>Category</h3>
        </label>
        {{!-- <input type="text" id="category" name="category" value="{{product.category}}"> --}}
        <select name="category" id="category" form="edit-product">
            {{#each category}}
            <option value="{{title}}">{{title}}</option>
            {{/each}}
        </select>
        <label for="image">
            <h3>Image</h3>
        </label>
        <figure>
            <img src="{{product.image}}" width="300">
        </figure>
        <input type="file" id="image" name="image">
        <input type="hidden" name="old_image" value="{{product.image}}">
        <label for="quantity">
            <h3>Quantity</h3>
        </label>
        <input type="number" id="quantity" name="quantity" value="{{product.quantity}}">
        <br>
        <label for="description">
            <h3>Description</h3>
        </label>
        <textarea name="description" id="description">{{product.description}}</textarea>
        <label for="price">
            <h3>Price</h3>
        </label>
        <input type="number" id="price" name="price" value="{{product.price}}"><br><br>
        <button type="submit">Update</button>
    </form>
</div>

