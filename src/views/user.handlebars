<div class="container">
  <div class="">
    <div class="">
      <div class="row mb-3">
        <div class="col-sm-12 col-md-12 col-lg-12 p-0 d-flex justify-content-center">
          <h2 class="ml-lg-2">Manage Users</h2>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 p-0 d-flex justify-content-center">
          <a href="#addUser" class="btn btn-success" data-toggle="modal">
		  <i class="material-icons">&#xE147;</i> <span>Add New User</span></a>
          <a href="#deleteUser" class="btn btn-danger" data-toggle="modal">
		  <i class="material-icons">&#xE15C;</i> <span>Delete</span></a>
        </div>
      </div>
    </div>
    <div class="table-responsive">
    <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">
        <span class="custom-checkbox pl-3">
					<input class="m-0" type="checkbox" id="selectAll">
				</span>
      </th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th>
        
      </th>
      <td>{{name}}</td>
      <td>{{email}}</td>
      <td>{{address}}</td>
      <td>{{phone}}</td>
      <td>
        <a href="admin/user/edit/{{id}}" class="edit" data-toggle="modal">
	        <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
        </a>
        <a href="admin/user/delete/{{id}}" class="delete" data-toggle="modal">
			    <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
