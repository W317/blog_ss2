                    2. Or use in conjunction with Maybelline Fitme Concealer at lip contour &amp; ultimate lipstick on
                    the inside of the lips to create a more haughty pout effect.
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>

      const bigImg = document.querySelector(".product-content-left-big-img img")
      const smallImg = document.querySelectorAll(".product-content-left-small-img img")
      smallImg.forEach(function (imgItem, X) {
        imgItem.addEventListener("click", function () {
          bigImg.src = imgItem.src
        })
      })

      const ingredients = document.querySelector(".product-content-right-bottom-content-ingredients")
      const detail = document.querySelector(".product-content-right-bottom-content-detail")
      const userguide = document.querySelector(".product-content-right-bottom-content-user-guide")
      const ingredientsButton = document.querySelector(".ingredients")
      const detailButton = document.querySelector(".detail")
      const userguideButton = document.querySelector(".userguide")
      const tickButton = document.querySelector(".product-content-right-bottom-top")
      const bigContent = document.querySelector(".product-content-right-bottom-content-big")
      ingredients.style.display = "none"
      userguide.style.display = "none"
      detailButton.classList.add('product-content-right-bottom-content-title-item--active')

      function changeTab(tab, button) {
        ingredients.style.display = "none"
        detail.style.display = "none"
        userguide.style.display = "none"
        tab.style.display = "block"
        ingredientsButton.classList.remove('product-content-right-bottom-content-title-item--active')
        userguideButton.classList.remove('product-content-right-bottom-content-title-item--active')
        detailButton.classList.remove('product-content-right-bottom-content-title-item--active')
        button.classList.add('product-content-right-bottom-content-title-item--active')
      }

      ingredientsButton.addEventListener("click", function () {
        changeTab(ingredients, ingredientsButton)
      })
      detailButton.addEventListener("click", function () {
        changeTab(detail, detailButton)

      })
      userguideButton.addEventListener("click", function () {
        changeTab(userguide, userguideButton)
      })
      tickButton.addEventListener("click", function () {
        bigContent.classList.toggle('product-content-right-bottom-content-big--expand')
      })


    </script>

