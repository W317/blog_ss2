<div class="content">
    <h1 id="createProduct">Edit {{blog.title}}</h1>
    <form method="post" action="/admin/blog-admin/update/{{blog._id}}" enctype="multipart/form-data">
        <label for="title"><h3>Title</h3></label>
        <input type="text" id="title" name="title" value="{{blog.title}}">
        <label for="author"><h3>Author</h3></label>
        <input type="text" id="author" name = "author" value="{{author}}">
        <label for="image">
            <h3>Image</h3>
        </label>
        <figure>
            <img src="{{blog.image}}" width="300">
        </figure>
        <input type="file" id="image" name="image">
        <input type="hidden" name="old_image" value="{{blog.image}}">
        <label for="href"><h3>Link</h3></label>
        <input type="text" name="href" id="href" value="{{blog.href}}"></input><br>
        <button type="submit" >Update</button>
    </form>
</div>