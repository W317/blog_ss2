{{!-- confirm edit --}}
<div id="edit-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Post </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
		    <label>Title</label>
			<input type="text" class="form-control" required>
		</div>
		<div class="form-group">
		    <label>Author</label>
			<input type="text" class="form-control" required>
		</div>
    <div class="form-group">
		    <label>Blog</label>
			<input type="text" class="form-control" required>
		</div>
    <div class="form-group">
		    <label>Image</label>
			<input type="file" class="form-control" required>
		</div>
		<div class="form-group">
		    <label>Link</label>
			<textarea class="form-control" required></textarea>
		</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="btn-edit">Save</button>
      </div>
    </div>
  </div>
</div>

{{!-- form hidden for editing --}}
<form method="post" name="edit-form"></form>

<script>
  const editModal = document.getElementById('edit-modal');
  const editForm = document.forms['edit-form'];
  let editId;
  if (editModal) {
      editModal.addEventListener('show.bs.modal', event => {
      // Button that triggered the modal
      const button = event.relatedTarget
      // Extract info from data-bs-* attributes
      editId = button.getAttribute('data-bs-id')
    })
  }

  const btnEdit = document.getElementById('btn-edit');
  btnEdit.onclick = function () {
    editForm.action = '/admin/blog-admin/edit/' + editId + '?_method=PUT';
    editForm.submit();
  }
</script>


