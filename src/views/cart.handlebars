<div class="carts">
  <div class="container mt-5 p-3 rounded cart">
    <div class="cart-page row no-gutters">
      <div class="product-details mr-2">
        <div class="d-flex flex-row align-items-center">
          <a href="/shop" class="line">
            <i class="fa fa-long-arrow-left"></i>
            <span class=" ml-2"></span>Continue
            Shopping</span></a>
        </div>

        <div class="product-cart">
          <h6 class="shop-cart mb-0">Shopping cart</h6>
          <div class="d-flex justify-content-between"><span>Your items in cart</span>
            <div class="d-flex flex-row align-items-center"><span class="text-black-50">Sort by:</span>
              <div class="price ml-2"><span class="mr-1">price</span><i class="fa fa-angle-down"></i></div>
            </div>
          </div>
          {{#each products}}
          <div>
            <div class="product-item d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
              <div class="d-flex flex-row align-items-center">
                <img class="rounded" src="{{this.item.image}}" width="75">
              </div>
              <div class="left-group flex-row flex-grow-1 align-items-center">
                <div class="ml-2"><span class="font-weight-bold d-block">{{this.item.title}}</span><span class="spec">
                </div>
                <div class="edit-price d-flex">
                  <a href="/cart/reduce/{{this.item._id}}">
                    <i class="fas fa-minus" style="margin-right: 15px;" aria-hidden="true"></i>
                  </a><span class="d-block">{{this.qty}}
                    <a href="/cart/add-to-cart/{{this.item._id}}">
                      <i class="fa fa-plus" style="margin-left: 15px;" aria-hidden="true"></i>
                    </a>
                  </span>
                  <span class="d-block ml-5 font-weight-bold">${{this.item.price}}</span><a
                    href="/cart/remove/{{this.item._id}}"><i class="far fa-trash-alt ml-3"></i></a>
                </div>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>
      <button class="checkoutBtn btn btn-primary btn-block d-flex justify-content-between mt-3 "
        type="button" onclick="checkout()"><span>Total:
          $<span class="totalPrice">{{totalPrice}}</span></span><span>Checkout<i
            class="fa fa-long-arrow-right ml-1"></i></span></button>

      <script>
        //tang giam so luong
        var totalPrice = document.querySelector('.totalPrice').innerHTML
        var checkoutBtn = document.querySelector('button.checkoutBtn')
        if (Number(totalPrice) === 0) {
          checkoutBtn.disabled = true
        }

        function checkout() {
          if (Number(totalPrice) === 0) {
            return
          }
          window.location.assign('/cart/checkout')
        }

      </script>

      <style>
        .line {
          text-decoration: none;
        }

        .carts {

          font-family: var(--body-font);
          margin: auto;
        }


        .cart {
          color: black;
          margin-bottom: 15px;
        }

        .shop-cart {
          font-size: 15px;
          margin-top: 15px;
        }

        .product-cart {
          border-top: 0.5px solid gray;
        }

        .credit-cart {
          padding: 20px !important;
          background-color: aquamarine;
          border-radius: 10px;

        }

        .product-item {
          box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
          display: flex;
          flex-wrap: wrap;
          gap: 10px;
        }



        .edit-price {
          margin-left: auto;
        }

        .left-group {
          display: flex;
        }

        @media screen and (max-width: 768px) {
          .left-group {
            display: block;
          }
        }
      </style>

    </div>
  </div>
</div>