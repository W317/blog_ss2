<div class="content">
    <h1 id="createProduct">Create</h1>
    <form method="post" action="/admin/product-admin/create" id="edit-product">
        <label for="title">
            <h3>Title</h3>
        </label>
        <input type="text" id="title" name="title">
        <label for="category">
            <h3>Category</h3>
        </label>
        {{!-- <input type="text" id="category" name="category" value="{{product.category}}"> --}}
        <select name="category" id="category" form="edit-product">
            {{#each category}}
            <option value="{{title}}">{{title}}</option>
            {{/each}}
        </select>
        <label for="image">
            <h3>Image</h3>
        </label>
        <input type="file" id="image" name="image">
        <label for="quantity">
            <h3>Quantity</h3>
        </label>
        <input type="number" id="quantity" name="quantity">
        <br>
        <label for="description">
            <h3>Description</h3>
        </label>
        <textarea name="description" id="description"></textarea>
        <label for="price">
            <h3>Price</h3>
        </label>
        <input type="number" id="price" name="price"><br><br>
        <button type="submit">Update</button>
    </form>
</div>