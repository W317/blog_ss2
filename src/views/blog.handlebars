
	<section id="latest-blog" class="scrollspy-section padding-large">
		<div class="container">
			<!-- tạo 1 array chứa các array nhỏ chứa tối đa 3 blog/array nhỏ -->
      {{#each blogarrays}}
			<div class="row">
				<div class="col-md-12">
					<!-- post grid -->
					<div class="post-grid">
						<div class="row">
							{{#each blogs}}
							<div class="col-md-4 post-item">
	            <figure>
	              <img src={{this.image}} alt="jewellery" class="post-image">
	            </figure>
	            <div class="post-content">
	              <div class="meta-tags">
	                <span class="meta-date">Posted in {{date}}</span>
	                <span class="meta-date">by {{this.author}}</span>
	              </div>
	              <h3 class="post-title">
	                <a href="#">{{this.title}}</a>
	              </h3>
	              <p>{{this.body}}</p>
	            </div>
	          </div>
            {{/each}}
						</div>
					</div>
				</div>

			</div>
      {{/each}}
	</div>
</section>