          </ul>
        </div>
      </div>
    </nav>
    <script>
      const imgLogo = document.getElementById('img-logo')
      const header = document.getElementsByTagName('header')[0]
      document.addEventListener('scroll', event => {
        let imgHeight = (150 - window.pageYOffset) < 90 ? 90 : (150 - window.pageYOffset)
        let headerColor = window.pageYOffset === 0 ? '#fff' : '#dcfcf3'
        imgLogo.style.width = `${imgHeight}px`
        header.style.background = `${headerColor}`
      });
    </script>
  </div>
  <style>
    .solstore-top--sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transform: translateZ(0);
    z-index: 100;
    }

    .header-items {
      align-items: center;
      width: 100%;
      justify-content: end;
      padding-right: 30px;
    }

    .header-items>* {
      padding-right: 10px;
      margin-bottom: 0;
      padding: 10px 20px;
    }

    .search-bar {
      flex-grow: 1;
    }

    .dropdown-submenu {
      display: flex;
      align-items: center;
    }

    .navbar-brand {
      display: none;
    }

    .user-icon {
      font-size: 20px;
      margin-top: 7px;
    }

    @media screen and (max-width: 768px) {
      .header-items {
        padding-right: 0;
      }

      .header-items>* {
        padding: 10px;
      }

      .nav-logo {
        display: none;
      }

      .navbar-brand {
        display: block;
      }
    }
  </style>
</header>