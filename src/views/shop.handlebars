<section class="shop-page padding-large">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-title">Shop</h1>
        <div class="breadcrumbs">
          <span class="item">
            <a href="/">Home</a>
          </span>
          <span class="item">/ Category</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- All product -->
<section class="categories" id="categories">
  <div class="list-order">
    <div class="order">
      <span class="home-label">Order by</span>
      <form id="filter-form" method="post" action="/shop">
        <input type="text" name="keyword" placeholder="Search..." id="search" />
        <select name="category" id="category" form="filter-form">
          <option value="">Brand</option>
            {{#each category}}
            <option value="{{title}}">{{title}}</option>
            {{/each}}
        </select>
        <select name="sorting" id="sorting" form="filter-form">
          <option value="">Sort by price</option>
          <option value="ascending">Ascending</option>
          <option value="descending">Descending</option>
        </select>
        <input type="submit" value="Filter" class="filter-button" />
      </form>
    </div>
  </div>
  <div class="product-list">
    {{#each products}}
    <div class="text-center product" data-aos="fade" data-aos-delay="0">
      <div class="product-image" style="background: url('{{image}}'); background-size: cover; background-repeat: no-repeat; background-position: center;"></div>
      <div class="category align-center">
        <a href="/shop/product/{{_id}}" class="line"><h5 class="font-weight-bold">{{title}}</h5></a>
        <p class="text-secondary">{{this.category}}</p>
      </div>
      <div class="price-tag text-center pb-1">${{this.price}}</div>
      <a href="/cart/add-to-cart/{{this._id}}" class="btn add-to-cart">Add to cart</a>
    </div>
    {{/each}}
  </div>
