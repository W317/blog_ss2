<section class="shop-page padding-large">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-title">Shop</h1>
        <div class="breadcrumbs">
          <span class="item">
            <a href="#">Home /</a>
          </span>
          <span class="item">Category</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- All product -->
<section class="categories" id="categories">
  <div class="list-order">
    <div class="order">
      <span class="home-label">Order by</span>
      <button class="btn">General</button>
      <button class="btn btn--primary">Latest</button>
      <button class="btn">Best seller</button>
    </div>
  </div>
  <div class="product-list">
    {{#each products}}
    <div class="text-center product" data-aos="fade" data-aos-delay="0">
      <div class="product-image" style="background: url('{{this.image}}'); background-size: cover; background-repeat: no-repeat; background-position: center;"></div>
      <div class="category align-center">
        <h5 class="font-weight-bold">{{this.title}}</h5>
        <p class="text-secondary">{{this.category}}</p>
      </div>
      <div class="price-tag text-center pb-1">$36.00</div>
      <a href="/cart/add-to-cart/{{this._id}}" class="btn add-to-cart">Add to cart</a>
    </div>
    {{/each}}
  </div>
