{{# each products }}
    <div class="row">
        {{# each this }}
        <div class="col-sm-6 col-md-4">
            <div class="img-thumbnail img-fluid">
                <img class="image-responsive" src="{{this.imagePath}}" alt="...">
                <div class="caption">
                    <h3>{{ this.title }}</h3>
                    <p class="description">{{ this.description }}</p>
                    <div class="clearfix">
                        <div class="price float-left">${{ this.price }}</div>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right" role="button">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
{{/each}}