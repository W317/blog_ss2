<section class="padding-large">
        <div class="container">
            <h1 id="createProduct">Update Product {{id}}</h1>
            <form  method="post" action="/update/{{id}}">
                <label for="title"><h3>Title</h3></label>
                <input type="text" id="title" name="title" value={{title}}>
                <label for="price"><h3>Price</h3></label>
                <input type="number" id="price" name = "price" value={{price}}>
                <label for="image"><h3>Image</h3></label>
                <input type="file" id="image" name="image">
                <label for="quantity"><h3>Quantity</h3></label>
                <input type="number" id = "quantity" name="quantity" value=""><br>
                <label for="description"><h3>Description</h3></label>
                <textarea name="textarea" id="description" name="description" value={{description}}></textarea><br>
                <input type="submit" value="Update">
            </form>
        </div>

    </section>